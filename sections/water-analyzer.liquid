    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: calc(var(--border-radius) * 0.75);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .water-analyzer__analysis-form h3 {
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
  }

  .water-analyzer__analysis-form p {
    margin: 0 0 1.5rem 0;
    color: #666;
  }

