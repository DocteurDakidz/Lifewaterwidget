<!-- Analyseur Eau Potable - Version avec Formulaire Natif Shopify -->
<div class="water-analyzer" data-section-id="{{ section.id }}" style="
  --primary-color: {{ section.settings.primary_color | default: '#667eea' }};
  --secondary-color: {{ section.settings.secondary_color | default: '#764ba2' }};
  --accent-color: {{ section.settings.accent_color | default: '#f093fb' }};
  --button-color: {{ section.settings.button_color | default: '#ff6b6b' }};
  --text-color: {{ section.settings.text_color | default: '#333333' }};
  --border-radius: {{ section.settings.border_radius | default: 20 }}px;
  --section-padding: {{ section.settings.section_padding | default: 2 }}rem;
">
  <!-- Header -->
  <header class="water-analyzer__header">
    <h2 class="water-analyzer__title">
      <span class="water-analyzer__icon">{{ section.settings.header_icon | default: 'üåä' }}</span>
      {{ section.settings.title | default: 'Analyseur Qualite Eau Potable' }}
    </h2>
    <p class="water-analyzer__subtitle">
      {{ section.settings.subtitle | default: 'Decouvrez la qualite de l eau a votre adresse' }}
    </p>
  </header>

  <!-- Main Content -->
  <div class="water-analyzer__content">
    
    <!-- Formulaire Natif Shopify -->
    <section class="water-analyzer__form-section">
      {% form 'contact', class: 'water-analyzer__native-form' %}
        
        <!-- Messages de retour Shopify -->
        {% if form.posted_successfully? %}
          <div class="water-analyzer__success-message">
            <h3>‚úÖ Demande envoy√©e avec succ√®s !</h3>
            <p>Nous avons bien re√ßu votre demande d'analyse pour <strong>{{ form.address }}</strong></p>
            <p>Vous recevrez les r√©sultats par email sous 24h.</p>
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="water-analyzer__error-message">
            <h4>‚ùå Erreur dans le formulaire</h4>
            {% for field in form.errors %}
              <p>{{ field | capitalize }} : {{ form.errors[field] }}</p>
            {% endfor %}
          </div>
        {% endif %}

        <!-- Section de recherche -->
        <div class="water-analyzer__search">
          <h3 class="water-analyzer__search-title">
            <span class="water-analyzer__icon">{{ section.settings.search_icon | default: 'üè†' }}</span>
            {{ section.settings.search_title | default: 'Analysez votre eau' }}
          </h3>
          <p class="water-analyzer__search-description">
            {{ section.settings.search_description | default: 'Saisissez votre adresse pour obtenir un rapport de qualite detaille' }}
          </p>

          <!-- Champs du formulaire -->
          <div class="water-analyzer__form-fields">
            
            <!-- Adresse (obligatoire) -->
            <div class="water-analyzer__field-group">
              <label for="contact_address" class="water-analyzer__label">
                üè† Votre adresse *
              </label>
              <input 
                type="text" 
                id="contact_address"
                name="contact[address]"
                class="water-analyzer__input"
                placeholder="{{ section.settings.placeholder | default: '01000 Bourg-en-Bresse' }}"
                required
                value="{{ form.address }}"
              >
            </div>

            <!-- Email (obligatoire) -->
            <div class="water-analyzer__field-group">
              <label for="contact_email" class="water-analyzer__label">
                üìß Votre email *
              </label>
              <input 
                type="email" 
                id="contact_email"
                name="contact[email]"
                class="water-analyzer__input"
                placeholder="votre@email.com"
                required
                value="{{ form.email }}"
              >
            </div>

            <!-- Nom (optionnel) -->
            {% if section.settings.collect_name %}
            <div class="water-analyzer__field-group">
              <label for="contact_name" class="water-analyzer__label">
                üë§ Votre nom
              </label>
              <input 
                type="text" 
                id="contact_name"
                name="contact[name]"
                class="water-analyzer__input"
                placeholder="Jean Dupont"
                value="{{ form.name }}"
              >
            </div>
            {% endif %}

            <!-- T√©l√©phone (optionnel) -->
            {% if section.settings.collect_phone %}
            <div class="water-analyzer__field-group">
              <label for="contact_phone" class="water-analyzer__label">
                üìû Votre t√©l√©phone
              </label>
              <input 
                type="tel" 
                id="contact_phone"
                name="contact[phone]"
                class="water-analyzer__input"
                placeholder="06 12 34 56 78"
                value="{{ form.phone }}"
              >
            </div>
            {% endif %}

            <!-- Type d'analyse -->
            {% if section.settings.analysis_types != blank %}
            <div class="water-analyzer__field-group">
              <label for="contact_analysis_type" class="water-analyzer__label">
                üî¨ Type d'analyse souhait√©
              </label>
              <select 
                id="contact_analysis_type"
                name="contact[analysis_type]"
                class="water-analyzer__select"
              >
                <option value="">S√©lectionnez un type</option>
                {% assign types = section.settings.analysis_types | split: ',' %}
                {% for type in types %}
                  <option value="{{ type | strip }}" {% if form.analysis_type == type %}selected{% endif %}>
                    {{ type | strip }}
                  </option>
                {% endfor %}
              </select>
            </div>
            {% endif %}

            <!-- Message personnalis√© -->
            <div class="water-analyzer__field-group">
              <label for="contact_body" class="water-analyzer__label">
                üí¨ Message (optionnel)
              </label>
              <textarea 
                id="contact_body"
                name="contact[body]"
                class="water-analyzer__textarea"
                placeholder="Pr√©cisez vos besoins ou questions..."
                rows="3"
              >{{ form.body }}</textarea>
            </div>

            <!-- Consentement RGPD -->
            {% if section.settings.require_consent %}
            <div class="water-analyzer__field-group water-analyzer__consent">
              <label class="water-analyzer__checkbox-label">
                <input 
                  type="checkbox" 
                  name="contact[consent]"
                  value="true"
                  required
                  class="water-analyzer__checkbox"
                >
                <span class="water-analyzer__checkmark"></span>
                J'accepte que mes donn√©es soient utilis√©es pour cette analyse et les recommandations associ√©es
              </label>
            </div>
            {% endif %}

            <!-- Newsletter (optionnel) -->
            {% if section.settings.newsletter_optin %}
            <div class="water-analyzer__field-group water-analyzer__newsletter">
              <label class="water-analyzer__checkbox-label">
                <input 
                  type="checkbox" 
                  name="contact[newsletter]"
                  value="true"
                  class="water-analyzer__checkbox"
                >
                <span class="water-analyzer__checkmark"></span>
                Je souhaite recevoir des conseils et offres sur la qualit√© de l'eau
              </label>
            </div>
            {% endif %}

          </div>

          <!-- Bouton de soumission -->
          <div class="water-analyzer__submit-section">
            <button 
              type="submit"
              class="water-analyzer__submit-button"
            >
              <span class="water-analyzer__button-icon">{{ section.settings.button_icon | default: 'üîç' }}</span>
              <span class="water-analyzer__button-text">{% assign default_text = "Demander l'analyse" %}{{ section.settings.button_text | default: default_text }}</span>
            </button>
          </div>

          <!-- Exemples d'adresses -->
          {% if section.settings.show_examples %}
          <div class="water-analyzer__examples">
            <span class="water-analyzer__examples-label">üí° Exemples :</span>
            {% assign examples = section.settings.examples | default: '01000,Gex,Bourg-en-Bresse' | split: ',' %}
            {% for example in examples %}
              <button 
                type="button" 
                class="water-analyzer__example"
                data-example="{{ example | strip }}"
              >
                {{ example | strip }}
              </button>
            {% endfor %}
          </div>
          {% endif %}

        </div>

        <!-- Champs cach√©s pour le traitement -->
        <input type="hidden" name="contact[tags]" value="water-analysis,{{ section.settings.contact_tags | default: 'lead' }}">
        <input type="hidden" name="contact[subject]" value="Demande d'analyse eau - {{ section.settings.title }}">
        
      {% endform %}
    </section>

    <!-- Section d'analyse instantan√©e (optionnelle) -->
    {% if section.settings.enable_instant_analysis %}
    <section class="water-analyzer__instant-section">
      <div class="water-analyzer__instant-toggle">
        <h3>‚ö° Analyse instantan√©e</h3>
        <p>Obtenez un aper√ßu imm√©diat de la qualit√© de l'eau dans votre r√©gion</p>
        <button type="button" class="water-analyzer__instant-button" data-instant-analysis>
          Analyse rapide
        </button>
      </div>

      <!-- R√©sultats de l'analyse instantan√©e -->
      <div class="water-analyzer__instant-results" data-instant-results style="display: none;">
        <!-- Contenu g√©n√©r√© par JavaScript -->
      </div>
    </section>
    {% endif %}

    <!-- Informations sur le processus -->
    <section class="water-analyzer__process-info">
      <h3>üî¨ Notre processus d'analyse</h3>
      <div class="water-analyzer__process-steps">
        <div class="water-analyzer__step">
          <div class="water-analyzer__step-number">1</div>
          <div class="water-analyzer__step-content">
            <h4>R√©ception de votre demande</h4>
            <p>Nous analysons votre adresse et identifions les sources d'eau locales</p>
          </div>
        </div>
        <div class="water-analyzer__step">
          <div class="water-analyzer__step-number">2</div>
          <div class="water-analyzer__step-content">
            <h4>Analyse des donn√©es officielles</h4>
            <p>Consultation des bases de donn√©es gouvernementales sur la qualit√© de l'eau</p>
          </div>
        </div>
        <div class="water-analyzer__step">
          <div class="water-analyzer__step-number">3</div>
          <div class="water-analyzer__step-content">
            <h4>Recommandations personnalis√©es</h4>
            <p>Suggestions de produits adapt√©s √† votre situation sp√©cifique</p>
          </div>
        </div>
      </div>
    </section>

  </div>
</div>

