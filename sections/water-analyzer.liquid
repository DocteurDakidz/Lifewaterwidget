  // Gestionnaire d'analyse
  function handleAnalysis() {
    const input = document.querySelector(selectors.analysisInput);
    const address = input ? input.value.trim() : '';
    
    if (!address) {
      showError('Veuillez saisir une adresse');
      return;
    }

    ui.toggleButton(true, 'Analyse...');

    Promise.all([
      analyzeWater(address),
      fetchProducts()
    ]).then(function(results) {
      const analysisResult = results[0];
      const products = results[1];
      
      let html = generateResultsHtml(analysisResult.location, analysisResult.qualityData, analysisResult.isExpanded);
      
      if (CONFIG.enableProducts && products.length > 0) {
        html += generateProductsHtml(products);
      }
      
      ui.showResults(html);
    }).catch(function(error) {
      showError(error.message);
    }).finally(function() {
      ui.hideLoading();
      ui.toggleButton(false, 'Analyser');
    });
  }

