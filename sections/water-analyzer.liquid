  // Gestion de la carte (identique à avant)
  const mapManager = {
    init: function() {
      if (!CONFIG.enableMap) return;
      
      if (typeof L === 'undefined') {
        const script = document.createElement('script');
        script.src = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js';
