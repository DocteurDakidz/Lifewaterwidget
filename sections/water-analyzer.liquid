  // Gestionnaire d'analyse
  function handleAnalysis(addressParam) {
    if (isAnalyzing) return;
    
    const input = document.querySelector(selectors.analysisInput);
    const address = addressParam || (input ? input.value.trim() : '');
    
    if (!address) {
      showError('Veuillez saisir une adresse');
      return;
    }

    isAnalyzing = true;
    ui.toggleButton(true, 'Analyse...');

    analyzeWater(address).then(function(result) {
      const html = generateResultsHtml(result.location, result.qualityData, result.isExpanded);
      ui.showResults(html);
    }).catch(function(error) {
      showError(error.message);
    }).finally(function() {
      ui.hideLoading();
      ui.toggleButton(false, 'Analyser');
      isAnalyzing = false;
    });
  }

  // Gestionnaire des exemples
  function setExample(address) {
    const input = document.querySelector('#contact_address');
    if (input) {
      input.value = address;
      input.focus();
    }
  }

  // Initialisation
  function init() {
    console.log('🌊 Water Analyzer (Sans Captcha) initialized');

    // Gestionnaire du bouton de soumission - SANS FORMULAIRE SHOPIFY
    const submitButton = document.getElementById('submit-analysis');
    if (submitButton) {
      submitButton.addEventListener('click', function() {
        const addressInput = document.getElementById('contact_address');
        const emailInput = document.getElementById('contact_email');
        const consentInput = document.getElementById('consent');

        if (!addressInput?.value || !emailInput?.value) {
          alert('Veuillez remplir tous les champs obligatoires');
          return;
        }

        if (consentInput && !consentInput.checked) {
          alert('Veuillez accepter l\'utilisation de vos données');
          return;
        }

        const address = addressInput.value;
        
        // Transition directe vers l'analyse
        ui.showAnalysisSection(address);
      });
    }

    // Gestionnaire du bouton d'analyse
    const analysisButton = document.querySelector(selectors.analysisButton);
    if (analysisButton) {
      analysisButton.addEventListener('click', function() {
        handleAnalysis();
      });
    }

    // Gestionnaire Enter sur l'input d'analyse
    const analysisInput = document.querySelector(selectors.analysisInput);
    if (analysisInput) {
      analysisInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          e.preventDefault();
          handleAnalysis();
        }
      });
    }

    // Gestionnaires des exemples
    const examples = document.querySelectorAll(selectors.examples);
    examples.forEach(function(example) {
      example.addEventListener('click', function() {
        const address = this.dataset.example;
        setExample(address);
        
        this.style.transform = 'scale(0.95)';
        setTimeout(() => {
          this.style.transform = '';
        }, 150);
      });
    });
  }

  // Démarrage
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

})();
