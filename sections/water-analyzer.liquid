    },

    getCacheKey: function(address) {
      return 'water_analysis_' + address.toLowerCase().replace(/\s+/g, '_');
    },

    validateEmail: function(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    },

    calculateDistance: function(lat1, lon1, lat2, lon2) {
      const R = 6371; // Rayon de la Terre en km
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
                Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
                Math.sin(dLon/2) * Math.sin(dLon/2);
      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
      return R * c;
    },

    // Calcul du score Yuka-style
    calculateWaterScore: function(analyses) {
      if (!analyses || !analyses.length) return 0;

      let totalScore = 0;
      let scoreCount = 0;

      // Critères de scoring
      const criteria = {
        bacteriological: { weight: 40, key: 'conformite_limites_bact_prelevement' },
        physicochemical: { weight: 35, key: 'conformite_limites_pc_prelevement' },
        freshness: { weight: 15 }, // Basé sur la date
        availability: { weight: 10 } // Basé sur le nombre d'analyses
      };

      // Score bactériologique
      const bactConform = analyses.filter(a => a.conformite_limites_bact_prelevement === 'C').length;
      const bactTotal = analyses.filter(a => a.conformite_limites_bact_prelevement).length;
      if (bactTotal > 0) {
        const bactScore = (bactConform / bactTotal) * 100;
        totalScore += bactScore * criteria.bacteriological.weight / 100;
        scoreCount += criteria.bacteriological.weight;
      }

      // Score physico-chimique
      const physConform = analyses.filter(a => a.conformite_limites_pc_prelevement === 'C').length;
      const physTotal = analyses.filter(a => a.conformite_limites_pc_prelevement).length;
      if (physTotal > 0) {
        const physScore = (physConform / physTotal) * 100;
        totalScore += physScore * criteria.physicochemical.weight / 100;
        scoreCount += criteria.physicochemical.weight;
      }

      // Score de fraîcheur (analyses récentes)
      const now = new Date();
      const recentAnalyses = analyses.filter(a => {
        const analysisDate = new Date(a.date_prelevement);
        const monthsOld = (now - analysisDate) / (1000 * 60 * 60 * 24 * 30);
        return monthsOld <= 12; // Moins d'un an
      });
      const freshnessScore = Math.min(100, (recentAnalyses.length / analyses.length) * 100);
      totalScore += freshnessScore * criteria.freshness.weight / 100;
      scoreCount += criteria.freshness.weight;

      // Score de disponibilité (nombre d'analyses)
      const availabilityScore = Math.min(100, (analyses.length / 10) * 100); // 10+ analyses = 100%
      totalScore += availabilityScore * criteria.availability.weight / 100;
      scoreCount += criteria.availability.weight;

      return Math.round(totalScore * 100 / scoreCount);
    },

    getScoreColor: function(score) {
      if (score >= 80) return '#20bf6b';
      if (score >= 60) return '#2ed573';
      if (score >= 40) return '#ffa502';
      if (score >= 20) return '#ff6b6b';
      return '#ff4757';
    },

    getScoreLabel: function(score) {
