  // G√©n√©ration du HTML des produits
  function generateProductsHtml(products) {
    if (!products || products.length === 0) return '';

    let html = '<div class="water-result water-result--products">';
    html += '<h4 class="water-result__title">üõí Produits recommand√©s</h4>';
