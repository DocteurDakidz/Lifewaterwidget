    getCacheKey: function(address) {
      return 'water_analysis_' + address.toLowerCase().replace(/\s+/g, '_');
    },

    calculateScore: function(analyses) {
      if (!analyses || analyses.length === 0) return null;

      let totalScore = 0;
      let scoreCount = 0;

      // Critères de scoring avec pondération
      const criteria = {
        bacteriological: { weight: 40, key: 'conformite_limites_bact_prelevement' },
        physicochemical: { weight: 35, key: 'conformite_limites_pc_prelevement' },
        frequency: { weight: 15 }, // Fréquence des analyses
        recency: { weight: 10 } // Récence des données
      };

      // Score bactériologique
      const bactConform = analyses.filter(d => d.conformite_limites_bact_prelevement === 'C').length;
      const bactTotal = analyses.filter(d => d.conformite_limites_bact_prelevement).length;
      if (bactTotal > 0) {
        const bactScore = (bactConform / bactTotal) * 100;
        totalScore += bactScore * (criteria.bacteriological.weight / 100);
        scoreCount += criteria.bacteriological.weight;
      }

      // Score physico-chimique
      const physConform = analyses.filter(d => d.conformite_limites_pc_prelevement === 'C').length;
      const physTotal = analyses.filter(d => d.conformite_limites_pc_prelevement).length;
      if (physTotal > 0) {
        const physScore = (physConform / physTotal) * 100;
        totalScore += physScore * (criteria.physicochemical.weight / 100);
        scoreCount += criteria.physicochemical.weight;
      }

      // Score de fréquence (nombre d'analyses)
      const frequencyScore = Math.min(analyses.length / 10, 1) * 100; // Max à 10 analyses
      totalScore += frequencyScore * (criteria.frequency.weight / 100);
      scoreCount += criteria.frequency.weight;

      // Score de récence
      const latestDate = new Date(analyses[0].date_prelevement);
      const monthsOld = (Date.now() - latestDate.getTime()) / (1000 * 60 * 60 * 24 * 30);
      const recencyScore = Math.max(0, 100 - (monthsOld * 10)); // -10 points par mois
      totalScore += recencyScore * (criteria.recency.weight / 100);
      scoreCount += criteria.recency.weight;

      return Math.round(totalScore);
    },

    getScoreColor: function(score) {
      if (score >= 85) return '#28a745'; // Vert
