<script>
(function() {
  'use strict';
  
  // Configuration
  const CONFIG = {
    sectionId: '{{ section.id }}',
    enableInstantAnalysis: {{ section.settings.enable_instant_analysis | default: false }}
  };

  // Utilitaires
  function setExample(address) {
    const input = document.querySelector('#contact_address');
    if (input) {
      input.value = address;
      input.focus();
    }
  }

  // Analyse instantan√©e (optionnelle)
  function initInstantAnalysis() {
    if (!CONFIG.enableInstantAnalysis) return;

    const button = document.querySelector('[data-instant-analysis]');
    const results = document.querySelector('[data-instant-results]');

    if (button) {
      button.addEventListener('click', function() {
        const address = document.querySelector('#contact_address')?.value;
        if (!address) {
          alert('Veuillez d\'abord saisir une adresse');
          return;
        }

        // Ici on pourrait int√©grer le code d'analyse existant
        results.innerHTML = '<p>üîç Analyse en cours pour: ' + address + '</p>';
        results.style.display = 'block';
      });
    }
  }

  // Gestionnaire des exemples
  function initExamples() {
    const examples = document.querySelectorAll('[data-example]');
    examples.forEach(function(example) {
      example.addEventListener('click', function() {
        const address = this.dataset.example;
        setExample(address);
        
        // Animation de feedback
        this.style.transform = 'scale(0.95)';
        setTimeout(() => {
          this.style.transform = '';
        }, 150);
      });
    });
  }

  // Validation du formulaire
  function initFormValidation() {
    const form = document.querySelector('.water-analyzer__native-form');
    if (!form) return;

    form.addEventListener('submit', function(e) {
      const email = form.querySelector('[name="contact[email]"]')?.value;
      const address = form.querySelector('[name="contact[address]"]')?.value;
      const consent = form.querySelector('[name="contact[consent]"]');

      if (!email || !address) {
        e.preventDefault();
        alert('Veuillez remplir tous les champs obligatoires');
        return;
      }

      if (consent && !consent.checked) {
        e.preventDefault();
        alert('Veuillez accepter l\'utilisation de vos donn√©es');
        return;
      }

      // Ajouter des donn√©es suppl√©mentaires
      const hiddenData = document.createElement('input');
      hiddenData.type = 'hidden';
      hiddenData.name = 'contact[submission_date]';
      hiddenData.value = new Date().toISOString();
      form.appendChild(hiddenData);
    });
  }

  // Initialisation
  function init() {
    console.log('üåä Water Analyzer (Native Form) initialized');
    initExamples();
    initFormValidation();
    initInstantAnalysis();
  }

  // D√©marrage
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

})();
</script>

