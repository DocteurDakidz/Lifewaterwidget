  }

  .water-analyzer__form-errors li {
    margin: 0.25rem 0;
  }

  /* Champs de formulaire */
  .water-analyzer__form-fields {
    display: grid;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

